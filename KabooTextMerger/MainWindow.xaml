<Window x:Class="KabooTextMerger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KabooTextMerger"
        mc:Ignorable="d"
        Title="Kaboo Text Merger"
        Height="720"
        Width="1180"
        MinHeight="560"
        MinWidth="860">
    <Window.Resources>
        <local:EncodingOptionToLabelConverter x:Key="EncodingOptionToLabelConverter" />
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0,0,0,8"
                    IsEnabled="{Binding IsNotBusy}">
            <Button Content="ファイル追加"
                    Padding="14,6"
                    Margin="0,0,8,0"
                    Click="AddFilesButton_Click" />
            <Button Content="フォルダ追加（再帰）"
                    Padding="14,6"
                    Margin="0,0,8,0"
                    Click="AddFolderButton_Click" />
            <TextBlock VerticalAlignment="Center"
                       Margin="0,0,6,0"
                       Text="拡張子(任意)" />
            <TextBox Width="170"
                     Margin="0,0,16,0"
                     VerticalAlignment="Center"
                     Text="{Binding FolderExtensionFilter, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="例: .txt,.md または txt;csv" />
            <Button Content="削除"
                    Padding="14,6"
                    Margin="0,0,8,0"
                    Click="RemoveButton_Click" />
            <Button Content="上へ"
                    Padding="14,6"
                    Margin="0,0,8,0"
                    Click="MoveUpButton_Click" />
            <Button Content="下へ"
                    Padding="14,6"
                    Click="MoveDownButton_Click" />
        </StackPanel>

        <ListView x:Name="FilesListView"
                  Grid.Row="1"
                  ItemsSource="{Binding Files}"
                  AllowDrop="True"
                  SelectionMode="Single"
                  IsEnabled="{Binding IsNotBusy}"
                  PreviewDragOver="FilesListView_PreviewDragOver"
                  Drop="FilesListView_Drop"
                  PreviewMouseLeftButtonDown="FilesListView_PreviewMouseLeftButtonDown"
                  MouseMove="FilesListView_MouseMove">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="#"
                                    Width="42"
                                    DisplayMemberBinding="{Binding Order}" />
                    <GridViewColumn Header="ファイルパス"
                                    Width="500"
                                    DisplayMemberBinding="{Binding FilePath}" />
                    <GridViewColumn Header="入力文字コード"
                                    Width="170">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding DataContext.InputEncodingOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                                          SelectedItem="{Binding SelectedEncoding, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          MinWidth="145">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource EncodingOptionToLabelConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="判定結果"
                                    Width="220"
                                    DisplayMemberBinding="{Binding DetectionSummary}" />
                    <GridViewColumn Header="状態"
                                    Width="180"
                                    DisplayMemberBinding="{Binding StatusMessage}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="2" Margin="0,10,0,0" IsEnabled="{Binding IsNotBusy}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       Text="出力先" />
            <TextBox Grid.Column="1"
                     VerticalAlignment="Center"
                     Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}" />
            <Button Grid.Column="2"
                    Margin="8,0,16,0"
                    Padding="14,6"
                    Content="参照..."
                    Click="BrowseOutputButton_Click" />
            <TextBlock Grid.Column="3"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       Text="出力文字コード" />
            <ComboBox Grid.Column="4"
                      MinWidth="170"
                      ItemsSource="{Binding OutputEncodingOptions}"
                      SelectedItem="{Binding SelectedOutputEncoding}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource EncodingOptionToLabelConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Grid.Column="5"
                       VerticalAlignment="Center"
                       Margin="16,0,8,0"
                       Text="改行コード" />
            <ComboBox Grid.Column="6"
                      MinWidth="120"
                      ItemsSource="{Binding OutputLineEndingChoices}"
                      SelectedValuePath="Option"
                      DisplayMemberPath="Label"
                      SelectedValue="{Binding SelectedOutputLineEnding}" />
        </Grid>

        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="{Binding StatusMessage}"
                       TextWrapping="Wrap" />
            <Button Grid.Column="1"
                    Padding="22,7"
                    Content="マージして保存"
                    IsEnabled="{Binding IsNotBusy}"
                    Click="MergeButton_Click" />
        </Grid>
    </Grid>
</Window>

